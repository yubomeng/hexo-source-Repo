// 推荐工具
.goodtool-title {
  margin: 1rem 0;
  line-height: 1;
  margin-top: 30px;
}

.tool-item {
  .tool-item-content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 0 -8px;

    .tool-item-content-item {
      width: calc(15% - 12px);
      border-radius: 12px;
      border: var(--style-border-always);
      overflow: hidden;
      margin: 8px 6px;
      background: var(--anzhiyu-card-bg);
      box-shadow: var(--anzhiyu-shadow-border);
      height: 200px;
      position: relative;

      +maxWidth1200() {
        width: calc(20% - 12px);
      }

      +maxWidth768() {
        width: 20%;
      }

      .tool-item-content-item-info {
        padding: 8px 16px 0 16px;
        margin-top: 5px;
        text-align: center;
      }

      .tool-item-content-item-name {
        font-size: 18px;
        font-weight: bold;
        line-height: 1;
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: visible;
        text-overflow: ellipsis;
        width: fit-content;
        cursor: pointer;
        padding-left: 34px !important;

        &:hover {
          color: var(--anzhiyu-main);
        }
      }

      .tool-item-content-item-specification {
        font-size: 12px;
        color: var(--anzhiyu-secondtext);
        line-height: 16px;
        margin-bottom: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .tool-item-content-item-description {
        line-height: 20px;
        color: var(--anzhiyu-secondtext);
        height: 60px;
        display: -webkit-box;
        overflow: hidden;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        font-size: 14px;
      }

      a.tool-item-content-item-link {
        font-size: 12px;
        background: var(--anzhiyu-gray-op);
        padding: 2px 8px;
        border-radius: 8px;
        cursor: pointer;
        margin: 0 auto !important;

        &:hover {
          background: var(--anzhiyu-main);
          color: var(--anzhiyu-white);
        }
      }

      .tool-item-content-item-cover {
        width: 100%;
        height: 90px;
        background: var(--anzhiyu-secondbg);
        display: flex;
        justify-content: center;
        align-items: center;
      }

      img.tool-item-content-item-image {
        object-fit: cover;
        height: 100%;
        width: 100%;
      }

      .tool-item-content-item-toolbar {
        display: flex;
        justify-content: space-between;
        position: absolute;
        bottom: 12px;
        left: 0;
        width: 100%;
        padding: 0 16px;
      }
    }
  }
}

body[data-type='tool'] #web_bg {
  background: var(--anzhiyu-background);
}

body[data-type='tool'] #page {
  border: 0;
  box-shadow: none !important;
  padding: 0 !important;
  background: 0 0 !important;
}

body[data-type='tool'] #page .page-title {
  display: none;
}

.bber-reply i {
  display: none;
}